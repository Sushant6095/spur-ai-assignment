# ============================================
# Backend API Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# ============================================
# Database Configuration (REQUIRED)
# ============================================
# PostgreSQL connection string
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# Default values match docker-compose.yml configuration
DATABASE_URL="postgresql://spur:spurpass@localhost:5432/spur_chat?schema=public"

# ============================================
# Redis Configuration (Optional)
# ============================================
# Redis is used for caching chat history and session data
# Defaults to localhost:6379 if not specified
REDIS_HOST="localhost"
REDIS_PORT="6379"

# ============================================
# OpenAI Configuration (REQUIRED)
# ============================================
# Your OpenAI API key - Get one from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key-here"

# OpenAI model to use for chat completions
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
# Default: gpt-4o-mini
OPENAI_MODEL="gpt-4o-mini"

# ============================================
# Server Configuration (Optional)
# ============================================
# Port for the API server
# Default: 3001
PORT=3001

# CORS allowed origins (comma-separated for multiple origins)
# Default: * (allows all origins)
# Example: "http://localhost:3000,https://yourdomain.com"
CORS_ORIGIN="http://localhost:3000"
